{
  "manifest_version": 3,
  "name": "Smiski Pomodoro Timer",
  "version": "1.0.0",
  "description": "A cute Smiski-themed Pomodoro timer to help you stay focused and productive!",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smiski Pomodoro Timer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

